import math

# 6.3 Palindrome integer
def reverse(number):
    count = -1
    num = 0
    while(number != 0):
        count += 1
        #ensuring I am alternating and getting the correct number
        if (count % 2 == 0):
            # each itteration adding the following number
           num = num * 10 + math.floor(number%10)

        else:
            # once added this will delete the last digit
            number = math.floor(number / 10)

        # stopping the loop and returning the completed number
        if number == 0:
            return(num)

# Checking if Palindrome
def palindrom(number):
    # using the reverse function to compare
    if(number == reverse(number)):
        return True

    else:
        return False

